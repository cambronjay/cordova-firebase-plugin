<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-firebase-plugin" version="0.0.19" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Cordova Firebase Plugin</name>

    <license>MIT</license>
    <!-- add to info.plist
    <key>GADIsAdManagerApp</key>
<true/>
<key>GADApplicationIdentifier</key>
<string>ca-app-pub-3940256099942544~1458002511</string> -->
    <engines>
        <engine name="cordova" version=">=7.0.0" />
        <engine name="cordova-android" version=">=6.3.0" />
        <engine name="cordova-plugman" version=">=4.2.0" />
        <engine name="cordova-ios" version=">=4.4.0" />
    </engines>
    <hook type="before_prepare" src="scripts/pre_prepare.js" />
    <platform name="ios">
        <hook type="after_plugin_install" src="scripts/ios/post_plugin_add.js" />
        <hook type="after_platform_add" src="scripts/ios/post_plugin_add.js" />
        <hook type="before_plugin_uninstall" src="scripts/ios/pre_plugin_remove.js" />
        <js-module name="CordovaFirebasePlugin" src="www/CordovaFirebasePlugin.js">
            <clobbers target="CordovaFirebasePlugin" />
        </js-module>
        <config-file parent="/*" target="config.xml">
            <feature name="CordovaFirebasePlugin">
                <param name="ios-package" value="CordovaFirebasePlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file parent="aps-environment" target="*/Entitlements-Debug.plist">
            <string>development</string>
        </config-file>
        <config-file parent="aps-environment" target="*/Entitlements-Release.plist">
            <string>production</string>
        </config-file>
        <resource-file src="src/ios/GoogleService-Info.plist" />
        <header-file src="src/ios/AppDelegate+CordovaFirebasePlugin.h" />
        <source-file src="src/ios/AppDelegate+CordovaFirebasePlugin.m" />
        <header-file src="src/ios/CordovaFirebasePlugin.h" />
        <source-file src="src/ios/CordovaFirebasePlugin.m" />
        <pods-config ios-min-version="9.0" use-frameworks="true">
            <source url="https://github.com/CocoaPods/Specs.git"/>
        </pods-config>
        <pod name="Firebase/Core"/>
        <pod name="Fabric"/>
        <pod name="Crashlytics" />
        <!-- <pod name='Firebase/AdMob' /> -->
        <pod name='Firebase/Analytics' />
        <pod name='Firebase/Auth' />
        <pod name='Firebase/Firestore' />
        <pod name='Firebase/Functions' />
        <!-- <pod name='Firebase/Messaging' /> -->
        <pod name='Firebase/Storage' />
        <pod name='Firebase/DynamicLinks' />
        <pod name='Firebase/InAppMessaging' />
        <pod name='Firebase/InAppMessagingDisplay' />
        <pod name='Firebase/Database' />
        <pod name='Firebase/Performance' />
        <pod name='Firebase/RemoteConfig' />

    </platform>
    <hook type="after_prepare" src="scripts/post_prepare.js" />
</plugin>